{
    "compilerOptions": {
        "target": "ES2022",
        "lib": [
            "ES2022"
        ],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "types": [
            "@cloudflare/workers-types"
        ],
        "resolveJsonModule": true,
        "allowJs": true,
        "checkJs": false,
        "jsx": "react-jsx",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "noEmit": true
    },
    "include": [
        "worker/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}